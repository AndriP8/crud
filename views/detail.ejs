            <thead>
            <tr>
                <th scope="col">Nomor Id</th>
                <th scope="col">Nama Produk</th>
                <th scope="col">Keterangan</th>
                <th scope="col">Harga</th>
                <th scope="col">Jumlah</th>          
            </tr>
            </thead>
            <tbody>
            <tr>
                <td><%= produk.id %></td>
                <td><%= produk.nama_produk %></td>
                <td><%= produk.keterangan %></td>
                <td><%= produk.harga %></td>
                <td><%= produk.jumlah %></td>
            </tr>
            </tbody>
        </table>
    </div>
</body>
</html>