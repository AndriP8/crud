</head>
<body>
    <div class="container container-fluid col-5 mt-4">
        <form action="/<%= produk.id %>/edit" method="post">
            <div class="mb-5">
                <label for="exampleFormControlInput1" class="form-label">Nama Produk</label>
                <input type="text" class="form-control mb-2" id="exampleFormControlInput1" name="nama_produk" value="<%= produk.nama_produk %>" />
                <label for="exampleFormControlInput1" class="form-label">Keterangan</label>
                <input type="text" class="form-control mb-2" id="exampleFormControlInput1" name="keterangan" value="<%= produk.keterangan %>" />
                <label for="exampleFormControlInput1" class="form-label">Harga</label>
                <input type="text" class="form-control mb-2" id="exampleFormControlInput1" name="harga" value="<%= produk.harga %>" />
                <label for="exampleFormControlInput1" class="form-label">Jumlah</label>
                <input type="text" class="form-control mb-2" id="exampleFormControlInput1" name="jumlah" value="<%= produk.jumlah %>" />
                <button type="submit" class="btn btn-lg btn-secondary w-100">Tambahkan</button>
              </div>
        </form>
    </div>
</body>
</html>