<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="shortcut icon" href="#">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>
<body>
    <div class="container container-fluid col-8">
        <h1 class="mb-3 mt-4 text-center">Invetaris toko Makmur Jaya</h1>
        <table class="table table-bordered text-center">
            <thead>
            <tr>
                <th scope="col">Nama Produk</th>
                <th scope="col">Keterangan</th>
                <th scope="col">Harga</th>
                <th scope="col">Jumlah</th>
                <th scope="col">Aksi</th>            
            </tr>
            </thead>
            <tbody>
                <% produk.forEach((pr, index) => {%>
            <tr>
                <td><%= pr.nama_produk %></td>
                <td><%= pr.keterangan %></td>
                <td><%= pr.harga %></td>
                <td><%= pr.jumlah %></td>
                <td>
                    <a href="/<%= pr.id%>" class="text-decoration-none">
                        <button type="button" class="btn btn-secondary">Detail</button>
                    </a>
                    <a href="/<%= pr.id %>/edit" class="text-decoration-none">
                        <button type="button" class="btn btn-secondary">Edit</button>
                    </a>
                    <a href="/<%= pr.id %>/delete" class="text-decoration-none">
                        <button type="button" class="btn btn-secondary">Delete</button>
                    </a>
                </td>
            </tr>
            <% })%>
            </tbody>
        </table>
    </div>
    <div class="container container-fluid col-5 mt-4">
        <h2 class="my-4">Tambahkan Produk</h2>
        <form action="/" method="post">
            <div class="mb-5">
                <label for="exampleFormControlInput1" class="form-label">Nama Produk</label>
                <input type="text" class="form-control mb-2" id="exampleFormControlInput1" name="nama_produk" placeholder="Masukan nama produk" />
                <label for="exampleFormControlInput1" class="form-label">Keterangan</label>
                <input type="text" class="form-control mb-2" id="exampleFormControlInput1" name="keterangan" />
                <label for="exampleFormControlInput1" class="form-label">Harga</label>
                <input type="text" class="form-control mb-2" id="exampleFormControlInput1" name="harga" />
                <label for="exampleFormControlInput1" class="form-label">Jumlah</label>
                <input type="text" class="form-control mb-2" id="exampleFormControlInput1" name="jumlah" />
                <button type="submit" class="btn btn-lg btn-secondary w-100">Tambahkan</button>
              </div>
        </form>
    </div>
</body>
</html>